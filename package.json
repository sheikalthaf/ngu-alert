{
    "name": "ngu-alert",
    "version": "0.0.1",
    "description": "Angular Universal alert",
    "scripts": {
        "transpile": "ngc ",
        "package": "rollup -c",
        "minify": "uglifyjs dist/bundles/ngualert.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngualert.umd.min.js",
        "build": "npm run transpile && npm run package && npm run minify",
        "postinstall": "npm run build"
    },
    "devDependencies": {
        "@angular/compiler": "^4.2.4",
        "@angular/compiler-cli": "^4.2.4",
        "rollup": "^0.43.0",
        "typescript": "^2.3.4",
        "uglify-js": "^3.0.19"
    },
    "dependencies": {
        "@angular/animations": "^4.2.4",
        "@angular/core": "^4.2.4",
        "@angular/platform-browser": "^4.2.4",
        "rxjs": "^5.1.0"
    },
    "peerDependencies": {
        "@angular/core": ">=2.4.0",
        "@angular/animations": ">=2.4.0",
        "@angular/platform-browser": ">=2.4.0"
    }
}
